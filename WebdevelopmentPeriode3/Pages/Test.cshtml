<style>
    form, .counter 
    {
        float:  right;
        position: relative;
        margin-left: 5px;
    }
</style>

<table class="table table-striped">
    <tr>
        <td>Fanta</td>
        <td class="text-center">
        <form method="post" asp-page-handler="Increment">
            <input type="hidden" asp-for="Counter1" value="@Model.Counter1"/>
            <button type="Submit" class="btn-sm btn-dark fa fa-plus" style="border-radius: 50px;"></button>
        </form> 
        <p class="counter">@Model.Counter1</p>
        <form method="post" asp-page-handler="Decrement">
            <input type="hidden" asp-for="Counter1" value="@Model.Counter1"/>
            <button type="submit" class="btn-sm btn-dark fa fa-minus" style="border-radius: 50px;"></button>
        </form>
        <td>Prijs per stuk: @Model.Price.ToString("C")</td>
        <td>Totaal: @((Model.Counter1 * Model.Price).ToString("C"))</td>
    </tr>
</table>

<button type="submit">Alles betalen</button>

