@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Inloggen</h1>
</div>


<!-- Inloggen -->
<div class="card mx-auto" style="width: 18rem;">
    <img class="card-img-top" src="Images/Senna.JPG" alt="Login image">
    <div class="card-body">
        <form method="post">
            <label asp-for="LoginModel.Username"></label>
            <input type="text" asp-for="LoginModel.Username"/><br>
            <label asp-for="LoginModel.Password"></label>
            <input type="password" asp-for="LoginModel.Password"/><br>
            <button type="submit" style="margin-top: 10px;">Login</button>
        </form>
    </div>
</div>

